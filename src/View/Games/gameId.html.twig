{%  extends 'layout.html.twig' %}

{%  block content %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
            <section class="mt-5 mb-5">
                <div class="bd-example">
                    <div id="carouselExampleCaptions" class="carousel slide " data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item  active">
                                <img src="../../../{{ gameId.photo1 }}" class="d-block img-responsive w-100 img-carousel"
                                     alt="...">
                            </div>
                            <div class="carousel-item text-center">
                                <img src="../../../{{ gameId.photo2 }}" class="d-block img-responsive w-100 img-carousel"
                                     alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="../../../{{ gameId.photo3 }}" class="d-block img-responsive w-100 img-carousel"
                                     alt="...">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            </div>
            <div class="col-lg-4 mt-5 align-content-end">
                <section class="mb-5 text-center">
                    <h2>{{ gameId.name }}</h2>
                    <p>{{ gameId.description |raw}}</p>
                </section>
                <br/>
                <section class="btnGame mt-5">
                    <a href="https://wildcodeschool.github.io/lyon-0219-react-pokemaze/#/"><button class="more-info-test2 col-12 mb-5
    ">Test me!</button></a>
                    <form method="post" id="get_game" action="/purchase/cart">
                        <button class="more-info-test3 col-12" type="submit" id="{{ gameId.name }}" name="{{ gameId.name
                        }}" onclick="" value="{{ gameId.name }}">
                            Get me!</button>

                    </form>
                </section>

            </div>
        </div>
    </div>

    <div class="rien" style="margin-top: 5%">

    </div>





{% endblock %}
