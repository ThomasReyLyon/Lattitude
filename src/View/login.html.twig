{% extends 'layout.html.twig' %}
 {% block content %}

     <div class="container-fluid" style="height: 600px;">

   {% if loggedIn is not empty %}
     <img src="/assets/images/Mario_OK!.gif" alt="Mario OK">
     <br />
     You are logged in as :
     {{ loggedIn }}
     <br />
     Your name is : {{ data.firstname }}
     <br />

    

    <a href="/Home/deconnect">Disconnect</a>
   {% else %}
      <div class="log" style="height: 800px">
       <div class="loggin">
       <video muted="muted" autoplay loop poster="PacmanMario.jpg" id="bgvid">
         <source src="/assets/images/PacmanMario.webm" type="video/webm">
       </video>

         <div class="container col-md-3 col-md-offset-4 JDdiv">
         <div class="card" style="width: 30rem;">
           <H2>Identification</h2>
           <br />
     <form method="post">
         <div class="form-group jedi">
             <label for="exampleInputEmail1">Your email</label>
             <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Enter email">
             <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
         </div>
         <div class="form-group jedi">
             <label for="exampleInputPassword1">Your password</label>
             <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Password">
         </div>

        <div class="jediSign">
         <button type="submit" class="btn btn-primary">Sign In</button>
        </div>
     </form>
     <br />
     <a href="/User/ShowForm" input type="button" class="btn btn-danger signUpButton jedi" value="SignUp">Sign up</a>
     </div>
       </div>
       </div>
     </div>
   {% endif %}

     </div>
 {% endblock %}
{% block footer %}
{% endblock %}
